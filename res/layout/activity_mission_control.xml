<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:background="#0099cc"
	tools:context=".MissionControlActivity">

	<RelativeLayout
		android:layout_height="wrap_content"
		android:layout_width="wrap_content"
		android:background="#767676">

		<TextView
			android:layout_height="wrap_content"
			android:text="Large Text"
			android:textAppearance="?android:attr/textAppearanceLarge"
			android:layout_width="wrap_content"
			android:textColor="#FFFFFF"
			android:layout_alignParentBottom="true"
			android:layout_alignParentLeft="true"
			android:id="@+id/missioncontrolstat3"/>

		<TextView
			android:layout_height="wrap_content"
			android:text="Large Text"
			android:textAppearance="?android:attr/textAppearanceLarge"
			android:layout_width="wrap_content"
			android:textColor="#FFFFFF"
			android:layout_alignParentBottom="true"
			android:layout_alignParentRight="true"
			android:id="@+id/missioncontrolstat4"/>

		<TextView
			android:layout_height="wrap_content"
			android:text="Large Text"
			android:textAppearance="?android:attr/textAppearanceLarge"
			android:layout_width="wrap_content"
			android:textColor="#FFFFFF"
			android:layout_alignParentLeft="true"
			android:id="@+id/missioncontrolstat1"
			android:layout_above="@id/missioncontrolstat3"/>

		<TextView
			android:layout_height="wrap_content"
			android:text="Large Text"
			android:textAppearance="?android:attr/textAppearanceLarge"
			android:layout_width="wrap_content"
			android:textColor="#FFFFFF"
			android:layout_alignParentRight="true"
			android:id="@+id/missioncontrolstat2"
			android:layout_above="@id/missioncontrolstat4"/>

		<TextView
			android:layout_height="wrap_content"
			android:text="Large Text"
			android:textAppearance="?android:attr/textAppearanceLarge"
			android:layout_width="match_parent"
			android:textSize="50sp"
			android:textColor="#FE1405"
			android:gravity="center_horizontal"
			android:id="@+id/missioncontrolfeedback"
			android:singleLine="false"/>

		<Button
			android:id="@+id/mission_review"
			android:gravity="center"
			android:layout_centerInParent="true"
			android:layout_height="wrap_content"
			android:layout_width="wrap_content"/>

	</RelativeLayout>

</FrameLayout>

