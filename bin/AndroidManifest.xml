<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.scatterlogic.games.spyrunner"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="9"
        android:targetSdkVersion="9" />
	<uses-permission 
	    android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
	<uses-permission 
	    android:name="android.permission.READ_EXTERNAL_STORAGE" />
	<uses-permission 
		android:name="android.permission.ACCESS_FINE_LOCATION"/>
	<uses-permission 
		android:name="android.permission.ACCESS_COARSE_LOCATION"/>
	<uses-permission 
	    android:name="android.permission.WAKE_LOCK" />
	
    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <service android:name=".MusicPlayer" android:enabled="true"></service>
        <activity
            android:name="com.scatterlogic.games.spyrunner.MainActivity"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="@string/app_name"
            android:theme="@style/FullscreenTheme" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.scatterlogic.games.spyrunner.MissionControlActivity"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="@string/title_activity_mission_control"
            android:theme="@style/FullscreenTheme" >
        </activity>
        <activity
            android:name="com.scatterlogic.games.spyrunner.MissionBriefingActivity"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="@string/title_activity_mission_briefing"
            android:theme="@style/FullscreenTheme" >
        </activity>
        <activity
            android:name="com.scatterlogic.games.spyrunner.MissionSelectActivity"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="@string/title_activity_mission_select"
            android:theme="@style/FullscreenTheme" >
        </activity>
        <activity
            android:name="com.scatterlogic.games.spyrunner.SplashActivity"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="@string/title_activity_splash"
            android:theme="@style/FullscreenTheme" >
        </activity>
        <activity
            android:name="com.scatterlogic.games.spyrunner.BonusFeatureActivity"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="@string/title_activity_bonus_feature"
            android:theme="@style/FullscreenTheme" >
        </activity>
        <activity
            android:name="com.scatterlogic.games.spyrunner.SpyProfileActivity"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="@string/title_activity_spy_profile"
            android:theme="@style/FullscreenTheme" >
        </activity>
        <activity
            android:name="com.scatterlogic.games.spyrunner.SettingsActivity"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="@string/title_activity_settings"
            android:theme="@style/FullscreenTheme" >
        </activity>
        <activity
            android:name="com.scatterlogic.games.spyrunner.ReviewMissionActivity"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="@string/title_activity_review_mission"
            android:theme="@style/FullscreenTheme" >
        </activity>
        <activity
            android:name="com.scatterlogic.games.spyrunner.StatTrackActivity"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="@string/title_activity_stat_track"
            android:theme="@style/FullscreenTheme" >
        </activity>
        <activity
            android:name="com.scatterlogic.games.spyrunner.MusicSetupActivity"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="@string/title_activity_music_setup"
            android:theme="@style/FullscreenTheme" >
        </activity>
        <activity
            android:name="com.scatterlogic.games.spyrunner.MissionLogActivity"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="@string/title_activity_mission_log"
            android:theme="@style/FullscreenTheme" >
        </activity>
    </application>

</manifest>
